---
<% 
  gpus = num_gpus.blank? ? 0 : num_gpus.to_i
%>
batch_connect:
  template: "basic"
script:
  native:
    - "-p<%= slurm_partition %>"
    <% if slurm_account == "" %><% else %>- "-A<%= slurm_account.gsub(/[^a-zA-Z0-9:]/, '')  %>"<% end %>
    <% if slurm_reservation == "" %><% else %>- "--reservation=<%= slurm_reservation.gsub(/[^a-zA-Z0-9:]/, '') %>"<% end %>
    - "-N1"
    - "-c<%= num_cores %>"
    - "--mem=<% if mem == "" %>1024<% else %><%= mem %><% end %>"
    <% if gpus > 0 %>- "--gpus=<%= gpus.to_s %>"<% end %>
    - "--job-name=jupyter/<%= context.jupyter_image.label %>/version"
